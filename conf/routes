# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.redirectToDefault
GET     /top                        controllers.Application.index
GET     /rooms/:name                controllers.Application.room(name)
GET     /ws/:name                   controllers.Application.ws(name)
GET     /loadtest/:name             controllers.Application.loadtest(name, threads: Int ?= 10, count: Int ?= 1000)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
